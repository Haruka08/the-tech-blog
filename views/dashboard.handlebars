        </div>
        <div>
            {{!-- {{blog.Comment.user_name}}    
            {{blog.Comment.createdAt}}   --}}
        </div>
    </div>
    <div class="card-body body blog-content">
      <blockquote class="blockquote mb-0">
        {{!-- <p>{{blog.Comment.comment}}</p> --}}
      </blockquote>
    </div>
  </div>

{{/each}}

