{{#each blogs as |blog| }}
  
<div class="list-group">

  <a href="/dashboard/blog/{{blog.id}}" class="list-group-item list-group-item-secondary" aria-current="true">
    <div class="d-flex w-100 justify-content-between">
      <div>
        {{blog.id}}
        {{blog.title}}
      </div>
      <div>
        <small>{{format_date blog.createdAt}} </small>
      </div>
    </div>
  </a>

</div>

{{/each}}

