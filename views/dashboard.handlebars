{{#each blogs as |blog| }}

<div class="card w-75 position-relative top-0 start-50 translate-middle-x mb-3 blog-container">
  <div class="d-flex justify-content-between card-header navbar blog-title">
      <div>
          {{!-- <h5 class="mb-1 blog-id">{{{blog.id}}}</h5> --}}
          <a href="/dashboard/comment/{{blog.id}}" id="{{blog.id}}">{{blog.title}}</a>
      </div>
      <div>
          {{blog.user_name}}    
          {{blog.createdAt}}  
      </div>
  </div>
  <div class="card-body body blog-content">
    <blockquote class="blockquote mb-0">
      <p>{{blog.content}}</p>
    </blockquote>
  </div>
</div>

{{!-- comment section  --}}
