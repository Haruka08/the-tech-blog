  <div class="card w-75 position-relative top-0 start-50 translate-middle-x mb-3 blog-container">
    <div class="d-flex justify-content-between card-header navbar blog-title">
        <div>
            <p id="post_id">{{blog.id}}</p>
            <a href="#">{{blog.title}}</a>
        </div>
        <div>
            {{blog.user_name}}    
            {{blog.createdAt}}  
        </div>
    </div>
    <div class="card-body body blog-content">
      <blockquote class="blockquote mb-0">
        <p>{{blog.content}}</p>
      </blockquote>
    </div>
  </div>

  <div class="card w-75 position-relative top-0 start-50 translate-middle-x mb-3 blog-container">
    <form class="row g-3 comment-form">
      <div class="col-md-12">
        <label for="inputEmail4" class="form-label">Comment</label>
        <input type="text" class="form-control" id="comment">
      </div>
      <div class="col-12">
        <button type="submit" class="btn btn-secondary">Submit</button>
      </div>
    </form>
  </div>


    <script src="/js/comment.js"></script>